@{
    ViewData["Title"] = "PublicNewsPaper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<PublicNewsPaper.Models.Story>

    <h2>Public NewsPaper</h2>
    <ul>
        @foreach (var listStory in Model)
        {
            <li>@Html.DisplayFor(modelStory => listStory.Description) | @Html.ActionLink("Details", "Details", new { id = listStory.StoryId })</li>
        }
    </ul>